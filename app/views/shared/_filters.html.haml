- sort_options = [['Order by Downloads', 'downloads'], ['Order by Name', 'name'], ['Order by Format', 'format'], ['Order by Rating', 'rating']]

= form_tag '/torrents', :class => 'filters' do
  %div
    =search_field_tag :search, nil, :placeholder => 'Search', :autocomplete => 'off'
  %div
    =select(:torrent, :sort, sort_options.map {|o| [o[0], o[1]] })
  %div
    =collection_select(:torrent, :release_format, release_formats, :id, :name, {:prompt => 'All formats'}, {:class => 'span2'})
  %div.unique_movies
    =label_tag :same_movies, :class => 'checkbox' do
      =check_box_tag :same_movies
      Hide duplicated movies
  %div
    =link_to torrents_path, :id => 'reset_filters', :class => 'btn' do
      %i.icon-refresh
      Reset
