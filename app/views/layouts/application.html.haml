!!!
%html
  %head
    %title TorrentCircle
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'TorrentCircle', root_path, :class => 'brand'
          = render 'shared/filters', :release_formats => @release_formats
          %div.last_update.pull-right
            %strong Last Update:
            %span{ :title => @update.created_at.getutc.iso8601 }= @update.created_at.to_s
    .container-fluid
      .row-fluid
        = render :partial => 'shared/flash_messages'
        = yield
